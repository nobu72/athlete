<div class=content>
  <div class="postTitle">
    <%= @post.text %>
  </div>
  <div class=show__video>
  <video  controls="controls" width="700" height="350">
    <source src="<%=@post.video%>" >
  </video>
  </div>
  <div class=coment>
    <% if @comments %>
    <% @comments.each do |comment| %>
      <div class=coment__list>
         <%=comment.user.nickname %> : <%=comment.text%> 
      </div>
       <% end%>
    <% end%>

  
  <%= form_with(model: [@post, @comment], class: :form, local: true) do |form| %>
    <%= form.text_field :text, placeholder: :コメント, class: :form__title %>
    <%= form.submit "SEND", class: :btn %>
  <% end%>
  </div>
</div>